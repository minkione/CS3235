<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:left="-2dp" android:top="-2dp" android:right="-2dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <padding android:bottom="8dp"/>
            <stroke android:width="2dp" android:color="@color/blue_accent"/>
        </shape>
    </item>
</layer-list>
