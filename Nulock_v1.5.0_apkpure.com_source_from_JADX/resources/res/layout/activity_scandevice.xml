<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/scandevice_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/title_bg" android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:id="@+id/btn_scan_device_back" android:background="@drawable/title_back" android:layout_width="wrap_content" android:layout_height="50dp"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/textview_scan_device_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/device_search" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="vertical" android:id="@+id/dialog" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:gravity="center" android:id="@+id/friendtab_show" android:background="@drawable/myloading_bg" android:layout_width="150dp" android:layout_height="80dp" android:layout_centerInParent="true"/>
            <ProgressBar android:id="@+id/mProgresBar" android:layout_width="25dp" android:layout_height="25dp" android:indeterminateDrawable="@drawable/loading" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
            <TextView android:textColor="@color/mywhite" android:layout_marginTop="5dp" android:text="@string/scandevice" android:layout_below="@+id/mProgresBar" android:layout_centerHorizontal="true" style="@style/myMintext_wrap"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
