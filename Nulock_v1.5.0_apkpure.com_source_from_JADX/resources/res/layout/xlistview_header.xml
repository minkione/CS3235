<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/xlistview_header_content" android:layout_width="match_parent" android:layout_height="50dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/xlistview_header_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textColor="@color/mygray" android:id="@+id/xlistview_header_hint_textview" android:text="下拉刷新" style="@style/myMintext_wrap"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                <TextView android:textColor="@color/mygray" android:id="@+id/xlistview_header_time_tag" android:text="上次更新时间：" style="@style/myMintext_wrap"/>
                <TextView android:textColor="@color/mygray" android:id="@+id/xlistview_header_time" style="@style/myMintext_wrap"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/xlistview_header_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-35dp" android:src="@drawable/xlistview_arrow" android:layout_alignLeft="@+id/xlistview_header_text" android:layout_centerVertical="true"/>
        <ProgressBar android:id="@+id/xlistview_header_progressbar" android:visibility="invisible" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="-40dp" android:layout_alignLeft="@+id/xlistview_header_text" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:id="@+id/xlistview_header_line" style="@style/myline_w"/>
</LinearLayout>
