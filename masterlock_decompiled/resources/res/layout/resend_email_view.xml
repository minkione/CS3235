<?xml version="1.0" encoding="utf-8"?>
<com.masterlock.ble.app.view.signup.ResendEmailView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/account_sign_up_sign_in_screens_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_logo_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="100">
            <ImageView android:id="@+id/iv_logo" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/graphic_logo_white" android:layout_weight="40" android:layout_centerHorizontal="true"/>
        </LinearLayout>
        <com.masterlock.ble.app.view.CustomFontTextView android:textStyle="bold" android:layout_gravity="center" android:id="@+id/ll_create_account_title" android:text="@string/create_account_title" android:layout_below="@+id/ll_logo_container" android:layout_centerHorizontal="true" android:textAllCaps="true" style="@style/AppTheme.HeaderLabel"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_create_account_body" android:paddingBottom="@dimen/space_m5" android:layout_height="wrap_content" android:layout_below="@+id/ll_create_account_title" style="@style/AppTheme.BodyPanel">
            <TextView android:textColor="@color/white" android:gravity="center_horizontal" android:layout_gravity="center" android:paddingTop="@dimen/space_m2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sign_up_2016_view_2_info_label" android:layout_centerHorizontal="true" style="@style/TextAppearance.AppCompat.Medium.Inverse"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/email_sent_to" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/space_m2" android:layout_centerHorizontal="true"/>
            <EditText android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/email_verification_code" android:layout_width="wrap_content" android:layout_marginTop="@dimen/space_m2" android:hint="@string/email_verification_hint" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|textUri|textPassword|textVisiblePassword|number|numberPassword|phone" android:imeOptions="actionDone" style="@style/CustomEditTextStyle"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_create_account_sign_in" android:layout_alignParentBottom="true" style="@style/AppTheme.Footer.Account">
            <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/space_m0" android:text="@string/sign_up_2016_view_1_already_have_account" style="@style/TextAppearance.AppCompat.Small"/>
            <Button android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="@null" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/sign_in_button" android:text="@string/sign_in" style="@style/FlatButtonWidget"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:paddingBottom="@dimen/space_m2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/ll_create_account_sign_in" android:layout_below="@+id/ll_create_account_body" style="@style/AppTheme.BodyPanel">
            <Button android:textColor="@color/text_color_primary_inverse" android:id="@+id/resend_email_button" android:background="@drawable/button_shape_transparent_stroke_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/space_m2" android:text="@string/sign_up_2016_view_2_resend_verification_email_button" android:textAllCaps="false" style="@style/TextAppearance.AppCompat.Medium"/>
            <Button android:enabled="false" android:textColor="@color/text_color_primary_inverse" android:id="@+id/verify_email_code" android:background="@drawable/button_shape_transparent_stroke_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/btn_continue" android:textAllCaps="false" style="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </RelativeLayout>
</com.masterlock.ble.app.view.signup.ResendEmailView>
