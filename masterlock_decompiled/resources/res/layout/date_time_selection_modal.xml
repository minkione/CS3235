<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textAppearance="@style/TextAppearance.AppCompat.Title" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/space_m3" android:layout_marginBottom="@dimen/space_m3" android:layout_marginStart="@dimen/space_m3" android:layout_marginEnd="@dimen/space_m3"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/space_m1" android:layout_marginBottom="@dimen/space_m3" android:layout_weight="1" android:layout_marginStart="@dimen/space_m3" android:layout_marginEnd="@dimen/space_m3">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <DatePicker android:id="@+id/dp_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:calendarViewShown="false"/>
            <TimePicker android:id="@+id/tp_time" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/AppTheme.Footer.RightAligned">
        <Button android:textColor="@color/text_color_primary" android:gravity="center" android:id="@+id/negative_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp" android:layout_marginEnd="8dp" style="?android:attr/buttonBarButtonStyle"/>
        <Button android:gravity="center" android:id="@+id/positive_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/accept_button" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
