<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/secondary_light" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <WebView android:id="@+id/tos_webview" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout android:orientation="horizontal" android:paddingBottom="8dp" style="@style/AppTheme.Footer">
        <Button android:textColor="@color/text_color_primary" android:id="@+id/negative_button" android:text="@string/decline" android:layout_centerVertical="true" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp" android:layout_marginEnd="8dp" android:layout_alignParentStart="true" style="@style/FlatButtonWidget"/>
        <Button android:id="@+id/positive_button" android:text="@string/accept_button" android:layout_centerVertical="true" android:textAllCaps="true" android:paddingStart="8dp" android:paddingEnd="8dp" android:layout_alignParentEnd="true" style="@style/FlatButtonWidget"/>
    </RelativeLayout>
</LinearLayout>
